{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./",
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictNullChecks": false,
        "lib": ["ES2020"]
    },
    "exclude": ["node_modules"]
}
